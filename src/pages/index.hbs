{{#extend "layout"}}
{{#content "main"}}

    <section class="intro">
        <div class="container">
            <div class="intro__inner">
                <div class="intro__header">
                    <h1 class="intro__title">Ледозаливочная техника бренда SportIce</h1>
                    <div class="intro__pagination js-intro-pagination">
                        <span class="intro__pagination-number">01</span>
                        <div class="intro__pagination-line">
                            <div class="intro__pagination-line-progress"></div>
                        </div>
                        <span class="intro__pagination-number">03</span>
                    </div>
                    <div class="intro__navigation">
                        <button class="js-prev-slide">
                            <svg>
                                <use xlink:href="#slider-arrow"></use>
                            </svg>
                        </button>
                        <button class="js-next-slide">
                            <svg>
                                <use xlink:href="#slider-arrow"></use>
                            </svg>
                        </button>
                    </div>
                </div>
                <div class="intro__body">
                    <div class="intro__body-wrapper">
                        <div class="intro__img-slider-container">
                            <div class="intro__img-slider swiper">
                                <div class="swiper-wrapper">
                                    {{#each intro }}
                                        <div class="swiper-slide" data-background="{{this.background}}">
                                            <img src="{{this.img}}" alt="Фото машины">
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="intro__text-slider swiper">
                            <div class="swiper-wrapper">
                                {{#each intro }}
                                    <div class="swiper-slide">{{this.text}}</div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="intro__footer">
                    <a class="intro__button button button--white" href="#">Подберите технику со скидкой 10%</a>
                    <div class="intro__brand">
                        <div class="intro__brand-check">
                            <svg>
                                <use xlink:href="#check-icon"></use>
                            </svg>
                        </div>
                        <p class="intro__brand-text">новый бренд на российском рынке</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="features">
        <div class="container">
            <h2 class="features__title section-title">
                <span>Американское качество</span> &nbsp;по доступной цене с доставкой по все россии
            </h2>
            <ul class="features__list">
                {{#each features }}
                    <li class="features__item">
                        <div class="features__img{{#if this.mod }} {{this.mod}}{{/if}}">
                            <img src="{{this.img}}" alt="Приемущество">
                        </div>
                        <div class="features__content">
                            <h3 class="features__item-title">{{this.title}}</h3>
                            <div class="features__text-block">
                                <p class="features__text">{{this.text}}</p>
                                <div class="features__property">
                                    <span class="features__value">{{this.property}}</span>
                                    <span class="features__desc">{{this.desc}}</span>
                                </div>
                            </div>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>
    <section class="models">
        <div class="wide-container">
            <div class="models__inner">
                <h2 class="models__title">Модельный ряд</h2>
                <div class="models__wrapper">
                    <div class="models__list-slider swiper">
                        <div class="swiper-wrapper">
                            {{#each models }}
                                <div class="models__list-slide swiper-slide" data-background="{{this.background}}">
                                    <h3 class="models__list-title">{{this.title}}</h3>
                                    <p class="models__list-text">{{this.text}}</p>
                                    <div class="models__list-img">
                                        <img src="{{this.img}}" alt="Фото модели">
                                    </div>
                                    {{#if tag }}
                                        <span class="models__list-tag">{{this.tag}}</span>
                                    {{/if}}
                                </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="models__property-slider swiper">
                        <div class="swiper-wrapper">
                            {{#each models }}
                                <div class="models__property-slide swiper-slide">
                                    <div class="models__property-check-block">
                                        <div class="models__property-check">
                                            <svg>
                                                <use xlink:href="#check-icon"></use>
                                            </svg>
                                        </div>
                                        <span class="models__property-check-desc">большая ширина ножа</span>
                                    </div>
                                    <ul class="models__property-list">
                                        {{#each properties }}
                                            <li class="models__property-item {{this.mod}}" style="left: {{this.left}}; top: {{this.top}}">
                                                <span class="models__property-value">{{this.value}}</span>
                                                <span class="models__property-desc">{{{this.desc}}}</span>
                                                {{#if view1 }}
                                                    <svg width="48" height="142" viewBox="0 0 48 142" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <symbol id="line1">
                                                            <path fill="none" d="M0 1H32V117"/>
                                                        </symbol>
                                                        <mask id="mask1">
                                                            <use class="mask" xlink:href="#line1" stroke="#fff"/>
                                                        </mask>
                                                        <use class="dashed" xlink:href="#line1" mask="url(#mask1)" stroke="#000" stroke-dasharray="6, 7" opacity="1"/>
                                                        <g class="circle">
                                                            <circle cx="34.5" cy="128.5" r="13.5" fill="#FCFDFF"/>
                                                            <circle cx="34.5" cy="128.5" r="4.5" fill="#AE261E"/>
                                                        </g>
                                                    </svg>
                                                {{else if view2 }}
                                                    <svg width="167" height="172" viewBox="0 0 167 172" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <symbol id="line2">
                                                            <path fill="none" d="M167 1H13V148"/>
                                                        </symbol>
                                                        <mask id="mask2">
                                                            <use class="mask" xlink:href="#line2" stroke="#fff"/>
                                                        </mask>
                                                        <use class="dashed" xlink:href="#line2" mask="url(#mask2)" stroke="#000" stroke-dasharray="6, 7" opacity="1"/>
                                                        <g class="circle">
                                                            <circle cx="13.5" cy="158.5" r="13.5" fill="#FCFDFF"/>
                                                            <circle cx="13.5" cy="158.5" r="4.5" fill="#AE261E"/>
                                                        </g>
                                                    </svg>
                                                {{else if view3 }}
                                                    <svg width="152" height="118" viewBox="0 0 152 118" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <symbol id="line3">
                                                            <path fill="none" d="M125 104H0.999995V0"/>
                                                        </symbol>
                                                        <mask id="mask3">
                                                            <use class="mask" xlink:href="#line3" stroke="#fff"/>
                                                        </mask>
                                                        <use class="dashed" xlink:href="#line3" mask="url(#mask3)" stroke="#000" stroke-dasharray="6, 7" opacity="1"/>
                                                        <g class="circle">
                                                            <circle cx="138.5" cy="104.5" r="13.5" fill="#FCFDFF"/>
                                                            <circle cx="138.5" cy="104.5" r="4.5" fill="#AE261E"/>
                                                        </g>
                                                    </svg>
                                                {{else if view4 }}
                                                    <svg width="57" height="182" viewBox="0 0 57 182" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                            <symbol id="line4">
                                                                <path fill="none" d="M57 181H11V27"/>
                                                            </symbol>
                                                            <mask id="mask4">
                                                                <use class="mask" xlink:href="#line4" stroke="#fff"/>
                                                            </mask>
                                                            <use class="dashed" xlink:href="#line4" mask="url(#mask4)" stroke="#000" stroke-dasharray="6, 7" opacity="1"/>
                                                        <g class="circle">
                                                            <circle cx="13.5" cy="13.5" r="13.5" fill="#FCFDFF"/>
                                                            <circle cx="13.5" cy="13.5" r="4.5" fill="#AE261E"/>
                                                        </g>
                                                    </svg>
                                                {{/if}}
                                            </li>
                                        {{/each}}
                                    </ul>
                                    <div class="models__property-img">
                                        <img src="{{this.img}}" alt="Фото модели">
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                        <div class="models__buttons">
                            <button class="models__button button button--red">Заказать</button>
                            <a class="models__link" href="#">Подробнее</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="reviews" id="reviews">
        <div class="wide-container">
            <div class="reviews__inner js-init-slider-container">
                <h2 class="reviews__title section-title">Отзывы клиентов</h2>
                <div class="reviews__slider swiper js-init-slider" data-space="25" data-loop="true" data-slides="3.5">
                    <div class="reviews__inner_items swiper-wrapper">
                        {{#each reviews }}
                            <blockquote class="reviews__item swiper-slide">
                                <a class="reviews__item-graphic{{#if video }} reviews__item-graphic--video{{/if}}">
                                    <img src="{{this.img}}" alt="Фото отзыва">
                                </a>
                                <h3 class="reviews__item-title">{{this.title}}</h3>
                                <p class="reviews__item-text">{{this.text}}</p>
                                <cite class="reviews__item-author">{{this.author}}</cite>
                                <span class="reviews__item-position">{{this.position}}</span>
                            </blockquote>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </section>

{{/content}}
{{/extend}}